<h3>Leave Requests</h3>
<br>
<div id="flash_messages"></div>
<% if @leaves.length > 0 :%>
  <form method="post" id="leaves-approval-form" accept-charset="UTF-8">
    <button class="btn btn-primary approve">Approve</button>
    <button class="btn btn-primary reject">Reject</button>
    <table id="supervisor_pending_leaves" class="table table-condensed timesheets sortable" style="margin-top: 10px">
      <thead>
        <tr>
          <th class="sorttable_nosort">
            <a id="toggle-boxes" class="icon-ok""> All</a>
          </th>
          <th>Name</th>
          <th>Leave Type</th>
          <th>Date Filed</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Duration</th>
          <th class="sorttable_nosort">Actions</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </form>
<% else :%>
  <div class="well">No requests found.</div>
<% end %>
